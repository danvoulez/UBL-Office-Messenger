# =============================================================================
# UBL Flagship Trinity - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# PostgreSQL (UBL Kernel)
# =============================================================================
# Unix socket connection (recommended for security)
DATABASE_URL=postgres:///ubl_ledger?host=/run/ubl/socket

# Alternative: TCP connection (development only)
# DATABASE_URL=postgres://ubl_kernel:password@localhost:5432/ubl_ledger

# =============================================================================
# UBL Kernel Server
# =============================================================================
UBL_LISTEN_ADDR=127.0.0.1:8080
UBL_LOG_LEVEL=info

# WebAuthn configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_ORIGIN=http://localhost:8080
WEBAUTHN_RP_NAME=UBL World

# =============================================================================
# Office (LLM Runtime)
# =============================================================================
OFFICE_LISTEN_ADDR=127.0.0.1:8081

# UBL API connection (Office connects to Kernel via HTTP only)
UBL_API_BASE=http://127.0.0.1:8080

# LLM Provider (anthropic, openai, local)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...

# Office identity (ASC token)
OFFICE_SID=office:main
# OFFICE_ASC_TOKEN=<generated-at-runtime>

# =============================================================================
# Messenger Frontend
# =============================================================================
VITE_API_BASE_URL=http://localhost:8080

# =============================================================================
# Infrastructure (LAB environments)
# =============================================================================
# WireGuard (internal network)
WG_INTERFACE=wg0
WG_LISTEN_PORT=51820

# MinIO (artifact storage)
MINIO_ENDPOINT=http://10.77.0.1:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123

# =============================================================================
# CI/CD
# =============================================================================
TENANT_ID=T.UBL
CI_ACTOR_ID=ubl:sid:app:ci

# =============================================================================
# Development
# =============================================================================
RUST_LOG=info,ubl_server=debug
RUST_BACKTRACE=1

