+/* Accent utilities built on top of --accent-* CSS variables.
+   Works with either .theme-orange or .theme-blue on the <html> element. */
+
+:root {
+  --accent-50:  #fff7ed;
+  --accent-100: #ffedd5;
+  --accent-200: #fed7aa;
+  --accent-300: #fdba74;
+  --accent-400: #fb923c;
+  --accent-500: #f97316;
+  --accent-600: #ea580c;
+  --accent-700: #c2410c;
+  --accent-800: #9a3412;
+  --accent-900: #7c2d12;
+  --accent-950: #431407;
+}
+
+/* If your ThemeProvider already sets these vars, the rules below are no-ops,
+   but we keep them for resilience. */
+.theme-blue {
+  --accent-50:  #eff6ff;
+  --accent-100: #dbeafe;
+  --accent-200: #bfdbfe;
+  --accent-300: #93c5fd;
+  --accent-400: #60a5fa;
+  --accent-500: #3b82f6;
+  --accent-600: #2563eb;
+  --accent-700: #1d4ed8;
+  --accent-800: #1e40af;
+  --accent-900: #1e3a8a;
+  --accent-950: #172554;
+}
+
+.btn-accent {
+  background: var(--accent-600);
+  color: white;
+  border-radius: 0.5rem;
+  padding: 0.5rem 0.875rem;
+  font-weight: 600;
+  transition: filter .15s ease, transform .02s ease;
+  border: 1px solid transparent;
+}
+.btn-accent:hover { filter: brightness(1.05); }
+.btn-accent:active { transform: translateY(1px); }
+.btn-accent:disabled { opacity: .55; cursor: not-allowed; }
+
+.btn-accent-outline {
+  background: transparent;
+  color: var(--accent-700);
+  border: 1px solid var(--accent-300);
+  border-radius: 0.5rem;
+  padding: 0.5rem 0.875rem;
+  font-weight: 600;
+}
+.btn-accent-outline:hover { background: var(--accent-50); }
+
+.link-accent {
+  color: var(--accent-700);
+  text-underline-offset: 2px;
+}
+.link-accent:hover {
+  color: var(--accent-800);
+  text-decoration: underline;
+}
+
+.badge-accent {
+  display: inline-flex;
+  align-items: center;
+  gap: .375rem;
+  padding: .125rem .5rem;
+  border-radius: 999px;
+  background: var(--accent-50);
+  color: var(--accent-700);
+  border: 1px solid var(--accent-200);
+  font-size: .75rem;
+  font-weight: 600;
+}
+
+.ring-accent {
+  outline: 2px solid transparent;
+  outline-offset: 2px;
+  box-shadow: 0 0 0 3px color-mix(in oklab, var(--accent-500) 45%, transparent);
+}
+
+.progress-accent {
+  height: 6px;
+  width: 100%;
+  background: color-mix(in oklab, var(--accent-200) 50%, #0000);
+  border-radius: 999px;
+  position: relative;
+  overflow: hidden;
+}
+.progress-accent > .bar {
+  position: absolute;
+  inset: 0;
+  width: var(--value, 0%);
+  background: var(--accent-600);
+  border-radius: 999px;
+  transition: width .2s ease;
+}
+
+.dot {
+  width: .5rem;
+  height: .5rem;
+  border-radius: 999px;
+  display: inline-block;
+}
+.dot.green { background: #22c55e; }
+.dot.yellow { background: #eab308; }
+.dot.red { background: #ef4444; }
+.dot.gray { background: #9ca3af; }
+.dot.blue { background: var(--accent-600); }
+
+/* Skeletons */
+.skeleton {
+  border-radius: .5rem;
+  background: linear-gradient(90deg,
+    color-mix(in oklab, var(--accent-50) 40%, #fafafa),
+    color-mix(in oklab, var(--accent-100) 60%, #f3f4f6),
+    color-mix(in oklab, var(--accent-50) 40%, #fafafa));
+  background-size: 200% 100%;
+  animation: pulse 1.2s ease-in-out infinite;
+}
+@keyframes pulse {
+  0% { background-position: 0% 0; }
+  100% { background-position: -200% 0; }
+}
