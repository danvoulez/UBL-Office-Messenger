+import React from 'react'
+
+function getFlag(): boolean {
+  try {
+    return localStorage.getItem('demo') === '1' || localStorage.getItem('demo_mode') === '1'
+  } catch { return false }
+}
+
+export default function DemoBanner() {
+  const [on, setOn] = React.useState(getFlag())
+
+  React.useEffect(() => {
+    const onStorage = () => setOn(getFlag())
+    window.addEventListener('storage', onStorage)
+    return () => window.removeEventListener('storage', onStorage)
+  }, [])
+
+  if (!on) return null
+  return (
