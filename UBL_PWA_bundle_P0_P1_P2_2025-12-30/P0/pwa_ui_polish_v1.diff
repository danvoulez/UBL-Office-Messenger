+import React from 'react'
+
+type State = 'online' | 'working' | 'waiting_on_you' | 'offline' | 'busy' | 'away'
+
+function colorClass(state: State) {
+  switch (state) {
+    case 'online': return 'green'
+    case 'working': return 'yellow'
+    case 'waiting_on_you': return 'red'
+    case 'busy': return 'blue'
+    case 'away': return 'yellow'
+    default: return 'gray'
+  }
+}
+
+export function PresenceBadge({ state, label }: { state: State, label?: string }) {
+  const color = colorClass(state)
+  return (
+    <span className="badge-accent">
+      <span className={`dot ${color}`} />
+      {label ?? state.replaceAll('_', ' ')}
+    </span>
+  )
+}
